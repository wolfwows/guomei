html,body{
	width: 100%;
	height: 100%;
	padding-bottom:20% ;
}
.class-content{
	width: 100%;
	height: 100%;
	overflow: hidden;
	position: relative;
}
#class-wine{
	width: 27%;
	height: 100%;
}
.class-wine-list{
	list-style: none;
	border-left:3px solid transparent;
	color:#333333;
	
}
.borderupdown{
	border-bottom:1px solid lightgray;
}

.class-wine-list span{
	width: 90%;
	height: 100%;
	padding:18% 0 18% 0;
	display: block;
	margin:0 auto;
}
.class-content-wine{
	width: 76%;
	height: 100%;
	background-color:#fff ;
	position: absolute;
	left:27%;
	top:0;
	display: none;
}

.wine-area{
	border-bottom:1px solid lightgray;
	padding:3% 0 5% 3%;
}

.wine-classify{
	line-height: 2.5rem;
}
.wineList{
	padding-left:6%;
	overflow: hidden;
}
.wineList li{
	float: left;
	width: 33.3%;
}
.wineList li a{
	display: inline-block;
	width: 100%;
	padding:10% 0;
	color:#777777;
	font-size:0.9rem;
}
.bttom-border{
	border:none;
}
.color-border{
	border-left:3px solid red;
	background-color:#fff ;
}
.spanadd{
	border-bottom: 1px solid transparent;
}

