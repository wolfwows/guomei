$(function(){
	$(".class-wine-list").first().addClass("color-border");
	$(".class-wine-list").click(function(){
		
		$(this).addClass('color-border').siblings().removeClass('color-border');
		$(this).find(".borderupdown").addClass('spanadd').parent().siblings().find('.borderupdown').removeClass('spanadd');
		$(this).find(".class-content-wine").show().end().siblings().find(".class-content-wine").hide();
	});
})
